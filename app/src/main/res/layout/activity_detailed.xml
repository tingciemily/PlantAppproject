<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedActivity">

    <ImageView
        android:id="@+id/desc_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/dandelion"
        />

    <TextView
        android:id="@+id/desc_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="蒲公英"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/desc_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="為菊目菊科的一屬，是溫帶至亞熱帶常見的一種植物。蒲公英中很多種採孤雌生殖，葉邊的形狀像獅子的尖牙。其英文名字Dandelion來自法語dent-de-lion，正是獅子牙齒之意，蒲公英花語為「我在遠處為你的幸福而祈禱」。"
        android:textSize="25sp"
        />


</androidx.appcompat.widget.LinearLayoutCompat>